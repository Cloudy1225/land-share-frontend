/* pages/searchPage/index.wxss */
.page {
    height: 100%;
    /* background-color: #F5F5F5; */
    background: white;
  }
  
  .normalBgView {
    background: white;
  }
  
  .normalBgView-hidden {
    display: none;
  }
  
  /* 热搜 */
  .hotSearchBgView {
    background: white;
    /* background: yellow; */
  }
  
  .hotSearchTitleView {
    height: 60rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .hotSearchTitle {
    padding-left: 30rpx;
    font-size: 28rpx;
  }
  
  .hotSearchCleanBtn {
    padding-right: 30rpx;
  }
  
  .hotSearchTagBgView {
    padding: 10rpx;
    display: flex;
    flex-wrap: wrap;
  }
  
  .hotSearchTag {
    width: auto;
    height: 48rpx;
    line-height: 48rpx;
    background: rgba(246, 246, 246, 1);
    border-radius: 10rpx;
    padding: 5rpx 25rpx;
    font-weight: 400;
    font-size: 28rpx;
    color: #4A4A4A;
    margin: 10rpx;
    background: rgb(240, 240, 240);
    /* background: wheat; */
  }
  
