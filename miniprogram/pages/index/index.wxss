/**index.wxss**/
.search-bar {
    position: relative;
    padding: 16rpx 20rpx;
    display: -ms-flexbox;
    display: flex;
    box-sizing: border-box;
    background-color: #efeff4
}

.search-bar::before {
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    height: 1PX;
    border-top: 1PX solid #d9d9d9;
    color: #d9d9d9;
    transform-origin: 0 0;
    transform: scaleY(.5)
}

.search-bar::after {
    content: " ";
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    height: 1PX;
    border-bottom: 1PX solid #d9d9d9;
    color: #d9d9d9;
    transform-origin: 0 100%;
    transform: scaleY(.5)
}

.search-bar__form {
    position: relative;
    -ms-flex: 1;
    flex: 1;
    width: 100%;
    height: 56rpx;
    overflow: hidden;
    background-color: #fff;
    background-clip: padding-box;
    border-radius: 8rpx
}

.search-bar__label {
    display: -ms-flexbox;
    display: flex;
    -ms-flex-pack: center;
    justify-content: center;
    -ms-flex-align: center;
    align-items: center;
    position: absolute;
    top: 2rpx;
    right: 2rpx;
    bottom: 2rpx;
    left: 2rpx;
    z-index: 2;
    border-radius: 8rpx;
    text-align: center;
    color: rgba(0, 0, 0, .45);
    background: #fff
}

.search-bar__text {
    display: inline-block;
    font-size: 28rpx;
    vertical-align: middle;
    margin-left: 10rpx
}

.search-bar__icon {
    vertical-align: middle
}