/* pages/land/index.wxss */

.search-bar {
    position: relative;
    padding: 16rpx 20rpx;
    display: -ms-flexbox;
    display: flex;
    box-sizing: border-box;
    background-color: #efeff4
}

.search-bar::before {
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    height: 1PX;
    border-top: 1PX solid #d9d9d9;
    color: #d9d9d9;
    transform-origin: 0 0;
    transform: scaleY(.5)
}

.search-bar::after {
    content: " ";
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    height: 1PX;
    border-bottom: 1PX solid #d9d9d9;
    color: #d9d9d9;
    transform-origin: 0 100%;
    transform: scaleY(.5)
}

.search-bar__form {
    position: relative;
    -ms-flex: 1;
    flex: 1;
    width: 100%;
    height: 56rpx;
    overflow: hidden;
    background-color: #fff;
    background-clip: padding-box;
    border-radius: 8rpx
}

.search-bar__label {
    display: -ms-flexbox;
    display: flex;
    -ms-flex-pack: center;
    justify-content: center;
    -ms-flex-align: center;
    align-items: center;
    position: absolute;
    top: 2rpx;
    right: 2rpx;
    bottom: 2rpx;
    left: 2rpx;
    z-index: 2;
    border-radius: 8rpx;
    text-align: center;
    color: rgba(0, 0, 0, .45);
    background: #fff
}

.search-bar__text {
    display: inline-block;
    font-size: 28rpx;
    vertical-align: middle;
    margin-left: 10rpx
}

.search-bar__icon {
    vertical-align: middle
}

.button {
    font-size: 28rpx;
}

.filteritem::after {
    content: " ";
    position: absolute;
    right: 0;
    top: 0;
    width: 1PX;
    bottom: 0;
    border-right: 1PX solid #d9d9d9;
    color: #d9d9d9;
    transform-origin: 100% 0;
    transform: scaleX(.5);
    height: 50%;
    transform: scaleX(.5) translateY(50%);
    border-right-width: 1px;
    border-right-style: solid;
    border-right-color: rgb(217, 217, 217);
}

.wux-accordion__rotatedarrow{
    display: inline-block;
    width: 26rpx;
    height: 26rpx;
    background-image: url("data:image/svg+xml;charset=utf-8,%3Csvg%20width%3D%2216%22%20height%3D%2226%22%20viewBox%3D%220%200%2016%2026%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%3E%3Cpath%20d%3D%22M2%200L0%202l11.5%2011L0%2024l2%202%2014-13z%22%20fill%3D%22%23c7c7cc%22%20fill-rule%3D%22evenodd%22%2F%3E%3C%2Fsvg%3E");
    background-size: contain;
    background-repeat: no-repeat;
    background-position: 50% 50%;
    transform: rotate(270deg);
    transition: transform .2s ease;
    position: absolute;
    display: block;
    top: 30rpx;
    right: 30rpx
  }

.wux-accordion__arrow{
    display: inline-block;
    width: 26rpx;
    height: 26rpx;
    background-image: url("data:image/svg+xml;charset=utf-8,%3Csvg%20width%3D%2216%22%20height%3D%2226%22%20viewBox%3D%220%200%2016%2026%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%3E%3Cpath%20d%3D%22M2%200L0%202l11.5%2011L0%2024l2%202%2014-13z%22%20fill%3D%22%23c7c7cc%22%20fill-rule%3D%22evenodd%22%2F%3E%3C%2Fsvg%3E");
    background-size: contain;
    background-repeat: no-repeat;
    background-position: 50% 50%;
    transform: rotate(90deg);
    transition: transform .2s ease;
    position: absolute;
    display: block;
    top: 30rpx;
    right: 30rpx
  }

  .wux-cascader .wux-cascader__menu--active {
